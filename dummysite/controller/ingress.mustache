apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{{ name }}}-ing
  namespace: {{{ namespace }}}
spec:
  rules: 
  - host: {{{ namespace }}}.localhost
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{{ name }}}-svc
            port:
              number: 2345
